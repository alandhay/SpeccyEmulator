{
  "family": "spectrum-emulator-streaming",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::043309319786:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::043309319786:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "spectrum-emulator-streamer",
      "image": "043309319786.dkr.ecr.us-east-1.amazonaws.com/spectrum-emulator:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        },
        {
          "containerPort": 8765,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "STREAM_BUCKET",
          "value": "spectrum-emulator-stream-dev-043309319786"
        },
        {
          "name": "DISPLAY",
          "value": ":99"
        },
        {
          "name": "PULSE_RUNTIME_PATH",
          "value": "/tmp/pulse"
        }
      ],
      "secrets": [
        {
          "name": "YOUTUBE_STREAM_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:043309319786:secret:youtube-stream-key-dev-abc123:stream_key::"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/spectrum-emulator-streaming",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
