{
  "family": "spectrum-emulator-streaming",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::043309319786:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::043309319786:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "spectrum-emulator-streamer",
      "image": "043309319786.dkr.ecr.us-east-1.amazonaws.com/spectrum-emulator:framebuffer-fixed",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        },
        {
          "containerPort": 8765,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "STREAM_BUCKET",
          "value": "spectrum-emulator-stream-dev-043309319786"
        },
        {
          "name": "YOUTUBE_STREAM_KEY",
          "value": "0ebh-efdh-9qtq-2eq3-e6hz"
        },
        {
          "name": "FRAMEBUFFER_MODE",
          "value": "true"
        },
        {
          "name": "VERSION",
          "value": "1.0.0-framebuffer-fixed"
        },
        {
          "name": "BUILD_TIME",
          "value": "2025-08-03T08:15:00Z"
        },
        {
          "name": "DISPLAY_SIZE",
          "value": "256x192"
        },
        {
          "name": "CAPTURE_SIZE", 
          "value": "256x192"
        },
        {
          "name": "OUTPUT_SIZE",
          "value": "512x384"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/spectrum-emulator-streaming",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      }
    }
  ]
}
